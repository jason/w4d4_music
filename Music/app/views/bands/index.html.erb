<h1>All Bands</h1>
<ul>
  <% @bands.each do |band| %>
    <li>
      <%= link_to band.name, band_path(band) %>
      <%= link_to "Edit", edit_band_path(band) %>
      <%= link_to "Delete", band_path(band), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new band", new_band_path %>